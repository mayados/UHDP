{% extends 'base.html.twig' %}

{% block title %}Page de contact{% endblock %}

{% block body %}

<div class="container-page form-page">

    <div id="form-contact" class="formulaire">
        <h1>Contactez-nous</h1>

        {{ form_start(form) }}
            <div class="custom-errors">
                {{ form_errors(form.hnp) }}
            </div>
            <div class="form-element">
                {{ form_row(form.hnp) }}            
            </div>
            <div class="custom-errors">
                {{ form_errors(form.content) }}
            </div>
            <div class="form-element">
                {{ form_row(form.content) }}                
            </div>
            <div class="form-element">
                {{ form_row(form.submit, {'attr': {'class': 'form-button'}}) }}                
            </div>
        {{ form_end(form) }}

    </div>

</div>
{% endblock %}
