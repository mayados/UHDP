{% extends 'base.html.twig' %}

{% block title %}Commentaires signalés{% endblock %}

{% block body %}

<div class="container-page administration">
        {% include '_partials/_adminnav.html.twig' %}
        <main class="main-administration">

            <h1>Commentaires signalés</h1>

            <section class="list">
                <table>
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Action</th>
                    </tr>
                {% for commentaire in commentaires %}
                    <tr class="genre">
                        <td>
                            <p>{{ commentaire.texte|raw }}</p>
                        </td>
                        <td>
                            <p>{{ commentaire.auteur }}</p>
                        </td>
                        <td>
                            <a href="{{ path('app_admin_commentaire_show', {'id': commentaire.id}) }}">Voir</a> 
                        </td>
                    </tr>
                {% endfor %}     
                </table>   
            </section>          
            <div class="pagination js-filter-pagination">
                {{ knp_pagination_render(commentaires) }}
            </div>           
        </main>
</div>
{% endblock %}