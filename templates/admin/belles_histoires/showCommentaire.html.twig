{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/base.css') }}">
    <link rel="stylesheet" href="{{ asset('css/memorial.css') }}">
{% endblock %}

{% block body %}

<div class="container-page administration">
    {% include '_partials/_adminnav.html.twig' %}
    <main class="main-administration">
        <h1>Commentaire</h1>  
        
        <div class="manage-post">
            <p>{{ commentaire.texte|raw }}</p>              
        </div>
   
        <a class="manage-button" href="{{ path('app_admin_comment_remove', {'id': commentaire.id}) }}">Supprimer le commentaire</a>

        {% if commentaire.reports| length > 0 %}
            <a class="manage-button" href="{{ path('app_admin_commentaire_remove_reports', {'id': commentaire.id}) }}">Supprimer les signalements</a>
        {% endif %}

     

        <div class="formulaire" id="form-commentaire">
            {{ form_start(formEditCommentaire) }}
                <div class="custom-errors">
                    {{ form_errors(formEditCommentaire.texte) }}
                </div>
                <div class="form-element">
                    {{ form_row(formEditCommentaire.texte) }}
                <div class="form-element">    
            {{ form_end(formEditCommentaire) }}                   
        </div>

    </main>

</div>
{% endblock %}
