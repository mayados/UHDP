{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/base.css') }}">
    <link rel="stylesheet" href="{{ asset('css/memorial.css') }}">
{% endblock %}

{% block body %}

<div class="container-page administration">
    {% include '_partials/_adminnav.html.twig' %}
    <main class="main-administration">
        <h1>Post</h1>     

        <a class="manage-button" href="{{ path('app_admin_post_remove', {'id': post.id}) }}">Supprimer le post</a>

        {% if post.reports| length > 0 %}
            <a class="manage-button" href="{{ path('app_admin_post_remove_reports', {'id': post.id}) }}">Supprimer les signalements</a>
        {% endif %}
{# 
        {{ dump(firstPost.0.texte) }} #}
        <div class="manage-post">
            <p>{{ post.texte|raw }}</p>            
        </div>


        <div class="formulaire" id="form-infos-profil">
            {{ form_start(formEditPost) }}
                <div class="custom-errors">
                    {{ form_errors(formEditPost.texte) }}
                </div>
                <div class="form-element">
                    {{ form_row(formEditPost.texte) }}
                </div>
                <div class="form-element">
                    {{ form_row(formEditPost.submit) }}
                </div>
            {{ form_end(formEditPost) }} 
        </div>
    </main>

</div>
{% endblock %}
