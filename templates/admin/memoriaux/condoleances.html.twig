{% extends 'base.html.twig' %}

{% block title %}Condoléances{% endblock %}

{% block body %}

<div class="container-page administration">

        {% include '_partials/_adminnav.html.twig' %}
        <main class="main-administration">
            <h1>Messages de condoléance</h1>
            <section class="list">
                <table>
                    <tr>
                        <th>Nom</th>
                        <th>Auteur</th>
                        <th>Mémorial</th>
                        <th>Actions</th>
                    </tr>
                {% for condoleance in condoleances %}
                    <tr>
                        <td>
                            {# Limiter le nombre de caractères à afficher avec le filtre twig #}
                            <p>{{ condoleance.texte|raw }}</p>                        
                        </td>
                        <td>
                            <p>{{ condoleance.auteur }}</p>
                        </td>
                        <td>
                            <p>{{ condoleance.memorial }}</p>
                        </td>
                        <td>
                            <a href="{{ path('app_admin_condoleance_show', {'id': condoleance.id}) }}">Voir</a>
                        </td>
                    </tr>
                {% endfor %}
                </table>
            </section>
            <div class="pagination js-filter-pagination">
                {{ knp_pagination_render(condoleances) }}
            </div>            
        </main>        
</div>
{% endblock %}
