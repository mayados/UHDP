{% extends 'base.html.twig' %}

{% block title %}Messages signalés{% endblock %}

{% block body %}

<div class="container-page administration">

        {% include '_partials/_adminnav.html.twig' %}
        <main class="main-administration">
            <h1>Messages signalés</h1>

            <section class="list">
                <table>
                    <tr>
                        <th>Message</th>
                        <th>Auteur</th>
                        <th>Action</th>
                    </tr>
                {% for message in messagesSignales %}
                    <tr>
                        <td>
                            <p>{{ message.texte|raw }}</p>
                        </td>
                        <td>
                            <p>{{ message.expediteur }}</p>
                        </td>
                        <td>
                            <a href="{{ path('app_admin_message_show', {'id': message.id}) }}">Voir</a> 
                        </td>
                    </tr>
                {% endfor %}
                </table>
            </section>
            <div class="pagination js-filter-pagination">
                {{ knp_pagination_render(messagesSignales) }}
            </div>            
        </main>        

</div>
{% endblock %}