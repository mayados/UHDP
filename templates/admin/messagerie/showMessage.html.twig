{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/base.css') }}">
    <link rel="stylesheet" href="{{ asset('css/memorial.css') }}">
{% endblock %}

{% block body %}

<div class="container-page administration">
    {% include '_partials/_adminnav.html.twig' %}
    <main class="main-administration">
        <h1 id="memorial-title">Message</h1>   
        
        <div class="manage-post">
            <p>{{ message.texte|raw }}</p>                  
        </div>
    

        <a class="manage-button" href="{{ path('app_admin_message_remove', {'id': message.id}) }}">Supprimer le message</a>

        <a class="manage-button" href="{{ path('app_admin_message_report_remove', {'id': message.id}) }}">Supprimer le signalement</a>

        

    </main>

</div>
{% endblock %}
