{% block title %}Conversation{% endblock %}

{% block body %}
<div class="container-page">
    <h1>{{ user.pseudo }}</h1>
    {% if messages %}
        {% for message in messages %}
            {# {% if conversation.destinataire == app.user.id %}
                <a href="{{path('app_conversation', {'id' : conversation.expediteur}) }}">{{ conversation.expediteur_pseudo }}</a>
            {% else %}
                <a href="{{path('app_conversation', {'id' : conversation.destinataire}) }}"">{{ conversation.destinataire_pseudo }}</a>
