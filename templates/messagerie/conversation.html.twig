        {{ form_row(form.texte) }}
        {# On cache le champ ici car il est setté dans le controller. On ne l'enlève pas du form car on en a besoin dans la messagerie #}
        {{ form_widget(form.destinataire, { 'attr': {'style': 'display:none'} }) }}
