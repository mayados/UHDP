{% block body %}
<div class="container-page">
    <section class="banniere-messagerie">
        <h1>Messagerie</h1>
    </section>
    <p class="fil-ariane"> <a href="{{ path('app_home') }}">Accueil</a> &lt; <a href="{{ path('app_messagerie') }}">Messagerie</a> &lt; Invitations par message</p>
    <section class="messagerie-links">
        <a class="bouton-action" href="{{ path('app_messagerie') }}">Accueil messagerie</a>
