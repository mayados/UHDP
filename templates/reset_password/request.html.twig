{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="container-page form-page" >
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <div class="formulaire" id="form-send-mail">
            <h1>Réinitialisez votre mot de passe</h1>

            {{ form_start(requestForm) }}

                <div class="form-element">
                    <small>
                        Entrez votre adresse mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </small>
                    {{ form_row(requestForm.email) }}                    
                </div>

                <button class="btn btn-primary">Réinitialiser</button>
            {{ form_end(requestForm) }}              
        </div>
    </div>

{% endblock %}
