{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}

<div class="container-page moderation">
        {% include '_partials/_moderateurnav.html.twig' %}
        <main class="main-administration">
            <section id="categories-liste">
                <h1>Liste des commentaires</h1>

                <table>
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Action</th>
                    </tr>
                {% for commentaire in commentaires %}
                    <tr class="genre">
                        <td>
                            <p>{{ commentaire.texte|raw }}</p>
                        </td>
                        <td>
                            <p>{{ commentaire.auteur }}</p>
                        </td>
                        <td>
                            <a href="{{ path('app_moderateur_commentaire_show', {'id': commentaire.id}) }}">Voir</a>  
                        </td>
                    </tr>
                {% endfor %}  
                </table>      
            </section>          
            <div class="pagination js-filter-pagination">
                {{ knp_pagination_render(commentaires) }}
            </div>           
        </main>
</div>
{% endblock %}