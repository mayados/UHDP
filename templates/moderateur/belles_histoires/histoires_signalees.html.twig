{% extends 'base.html.twig' %}

{% block title %}Histoires signalées{% endblock %}

{% block body %}

<div class="container-page moderation">

        {% include '_partials/_moderateurnav.html.twig' %}
        <main class="main-administration">
            <h1>Histoires signalées</h1>

            <table>
                <tr>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Action</th>
                </tr>
            {% for histoire in histoiresSignalees %}
                <tr>
                    <td>
                        <p>{{ histoire.titre }}</p>
                    </td>
                    <td>
                        <p>{{ histoire.auteur }}</p>   
                    </td>
                    <td>
                        <a href="{{ path('app_moderateur_histoire_show', {'slug': histoire.slug}) }}">Voir</a>
                    </td>
                      
                </tr>
            {% endfor %}
            </table>
            <div class="pagination js-filter-pagination">
                {{ knp_pagination_render(histoiresSignalees) }}
            </div>            
        </main>        

</div>
{% endblock %}