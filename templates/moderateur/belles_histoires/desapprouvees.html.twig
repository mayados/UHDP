{% extends 'base.html.twig' %}

{% block title %}Histoires désapprouvées{% endblock %}

{% block body %}

<div class="container-page moderation">

        {% include '_partials/_moderateurnav.html.twig' %}
        <main class="main-administration">
            <h1>Histoires désapprouvées</h1>

            <section class="list">
                <table>
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Action</th>
                    </tr>
                {% for histoire in histoiresDesapprouvees %}
                    <tr>
                        <td>
                            <p>{{ histoire.titre }}</p>
                        </td>
                        <td>
                            <p>{{ histoire.pseudo }}</p> 
                        </td>
                        <td>
                            <a href="{{ path('app_moderateur_histoire_show', {'slug': histoire.slug}) }}">Voir</a>
                        </td>
                    </tr>
                {% endfor %}
                </table>
            </section>
            <div class="pagination js-filter-pagination">
                {{ knp_pagination_render(histoiresDesapprouvees) }}
            </div>            
        </main>        
</div>
{% endblock %}