{% extends 'base.html.twig' %}

{% block title %}Memoriaux{% endblock %}

{% block body %}

<div class="container-page moderation">

        {% include '_partials/_moderateurnav.html.twig' %}
        <main class="main-administration">
            <h1>Memoriaux</h1>

            <section class="list">
                <table>
                    <tr>
                        <th>Nom</th>
                        <th>Auteur</th>
                        <th>Actions</th>
                    </tr>
                {% for memorial in memoriaux %}
                    <tr>
                        <td>
                            <p>{{ memorial.nom }}</p>                        
                        </td>
                        <td>
                            <p>{{ memorial.auteur }}</p>                        
                        </td>
                        <td>
                            <a href="{{ path('app_moderateur_memorial_show', {'id': memorial.id}) }}">Voir</a>                       
                        </td>
                    </tr>
                {% endfor %}
                </table>
            </section>
            <div class="pagination js-filter-pagination">
                {{ knp_pagination_render(memoriaux) }}
            </div>            
        </main>        

</div>
{% endblock %}
