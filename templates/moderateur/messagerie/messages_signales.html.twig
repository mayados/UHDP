{% extends 'base.html.twig' %}

{% block title %}Messages signalés{% endblock %}

{% block body %}

<div class="container-page moderation">

        {% include '_partials/_moderateurnav.html.twig' %}
        <main class="main-administration">
            <h1>Messages signalés</h1>

            <table>
                <tr>
                    <th>Message</th>
                    <th>Auteur</th>
                    <th>Action</th>
                </tr>
            {% for message in messagesSignales %}
                <tr>
                    <td>
                        <p>{{ message.texte|raw }}</p>
                    </td>
                    <td>
                        <p>{{ message.expediteur }}</p>
                    </td>
                    <td>
                        <a href="{{ path('app_moderateur_message_show', {'id': message.id}) }}">Voir</a> 
                    </td>
                </tr>
            {% endfor %}
            </table>
            <div class="pagination js-filter-pagination">
                {{ knp_pagination_render(messagesSignales) }}
            </div>            
        </main>        

</div>
{% endblock %}