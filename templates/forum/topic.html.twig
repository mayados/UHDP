{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}

<div class="container-page">

    {{ topic.titre }}

    {{ topic.dateCreation | date('d-m-Y') }}

    {{ topic.auteur }}
 
    {% for post in topic.posts %}
        <div class="post">
            {{ post.texte }}
            ({{ post.auteur }})
        </div>
    {% endfor %}

    <h5>Ajout de commentaires</h5>

    {{ form_start(formAddPost) }}    
    {{ form_end(formAddPost) }}

</div>

{% endblock %}
