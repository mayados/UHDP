{% extends 'base.html.twig' %}

{% block title %}
    {% if edit == false %}
        Création d'une belle histoire
    {% else %}
        Edition de l'histoire
    {% endif %}
{% endblock %}

{% block body %}

<div class="container-page">

    {% if edit == false %}
        <h2>Création d'une belle histoire</h2>
    {% else %}
        <h2>Edition de l'histoire</h2>
    {% endif %}

    <form>
    {{ form_start(formAddHistoire) }}  
        <div class="form-element">
            {{ form_row(formAddHistoire.titre) }} 
        </div>
        <div class="form-element">
            {{ form_row(formAddHistoire.texte) }} 
        </div>
        <div class="form-element">
            {{ form_row(formAddHistoire.imgHistoire) }} 
        </div>
        <div class="form-element">
            {{ form_row(formAddHistoire.submit) }} 
        </div>
    {{ form_end(formAddHistoire) }}        
    </form>


</div>
{% endblock %}
