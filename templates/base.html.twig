<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li>
                        <a href="{{ path('app_home') }}">Accueil</a>
                    </li>
                    <li>
                        <a href="{{ path('app_memoriaux') }}">Memoriaux</a>
                    </li>
                    <li>
                        <a href="{{ path('app_belles_histoires') }}">Belles histoires</a>
                    </li>
                    <li>
                        <a href="{{ path('app_mot_commemoration') }}">Commémoration</a>
                    </li>
                    <li>
                        <a href="{{ path('app_forum') }}">Forum</a>
                    </li>
                    <li>
                        <a href="#">A propos</a>
                    </li>
                    {% if app.user and app.user.roles.0 == "ROLE_ADMIN" %}
                        <li>
                            <a href="{{ path('app_admin_users') }}">Utilisateurs</a>
                        </li>
                        <li>
                            <a href="{{ path('app_admin_categories') }}">Catégories</a>
                        </li>
                    {% endif %}                      
                    {% if app.user %}                        
                        <li>
                            <a href="{{ path('my_profile') }}">Mon profil</a>
                        </li>
                        <li>
                            <a href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>
                    {% elseif not app.user %}
                        <li>
                            <a href="{{ path('app_login') }}">Connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </header>
            {% block body %}{% endblock %}            
        <footer>
            {# <ul>
                <li>CGU</li>
                <li>Mentions légales</li>
                <li>Site mapping</li>
                <li>Nous contacter (créer formulaire de contact, même non fonctionnel)</li>
                <li>Liens internes (à insérer)</li>
                <li>Liens externes (réseaux sociaux)</li>
            </ul> #}
        </footer>
    </body>
</html>
